# =====================================================
# SIGMATRADE BOT - Environment Variables Template
# =====================================================
# Copy this file to .env and fill in your values
#  NEVER commit .env to git!
# =====================================================

# ============= TELEGRAM BOT =============
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_BOT_USERNAME=your_bot_username

# ============= DATABASE =============
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/sigmatrade
DATABASE_ECHO=false

# ============= ADMIN =============
ADMIN_TELEGRAM_IDS=123456789,987654321

# ============= WALLET & BLOCKCHAIN =============
WALLET_PRIVATE_KEY=your_wallet_private_key_here
WALLET_ADDRESS=0xYourWalletAddress
USDT_CONTRACT_ADDRESS=0x55d398326f99059fF775485246999027B3197955
RPC_URL=https://bsc-dataseed.binance.org/
SYSTEM_WALLET_ADDRESS=0xYourSystemWalletAddress
PAYOUT_WALLET_ADDRESS=

# ============= REDIS =============
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============= DEPOSIT LEVELS =============
DEPOSIT_LEVEL_1=50.0
DEPOSIT_LEVEL_2=100.0
DEPOSIT_LEVEL_3=250.0
DEPOSIT_LEVEL_4=500.0
DEPOSIT_LEVEL_5=1000.0

# ============= SECURITY =============
SECRET_KEY=your_secret_key_here_generate_with_openssl
ENCRYPTION_KEY=your_encryption_key_here_generate_with_openssl

# ============= APPLICATION =============
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# ============= BROADCAST SETTINGS =============
BROADCAST_RATE_LIMIT=15
BROADCAST_COOLDOWN=900

# ============= ROI SETTINGS =============
ROI_DAILY_PERCENT=0.02
ROI_CAP_MULTIPLIER=5.0